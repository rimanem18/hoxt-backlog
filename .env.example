# ================================
# ローカル開発環境設定
# ================================

# サーバーポート設定
SERVER_PORT=3001
CLIENT_PORT=3000

# CORS設定
ACCESS_ALLOW_ORIGIN=http://localhost:3000
ACCESS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
ACCESS_ALLOW_HEADERS=Content-Type,Authorization

# フロントエンド設定
NEXT_PUBLIC_TRUSTED_DOMAINS=localhost:3000,localhost:3001
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ================================
# Supabase設定（開発・本番共通）
# ================================

# フロントエンド用（パブリック）
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# バックエンド用（サーバーサイド）
SUPABASE_URL=https://your-project.supabase.co


# ================================
# データベース設定（ローカルテスト用）
# ================================

# PostgreSQL設定（docker-compose用）
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=test_password
DB_HOST=db
DB_PORT=5432
BASE_SCHEMA=test_schema
DATABASE_URL=postgresql://postgres:test_password@db:5432/postgres

# ================================
# AWS / Terraform設定
# ================================

# AWS基本設定
AWS_REGION=ap-northeast-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# AWS IAM設定
AWS_ROLE_ARN=arn:aws:iam::123456789012:role/your-project-github-actions-unified
AWS_OIDC_ROLE_ARN=arn:aws:iam::123456789012:role/your-project-github-actions-unified

# Terraform変数設定
ENVIRONMENT=development
PROJECT_NAME=your-project
REPOSITORY_NAME=owner/your-repo
# 本番環境用（PostgreSQLスキーマ名）
# BASE_SCHEMA=your_project_schema

# CORS設定
ACCESS_ALLOW_ORIGIN_PRODUCTION=https://your-project.net
ACCESS_ALLOW_ORIGIN_PREVIEW=https://*.your-project.pages.dev

# ================================
# CloudFlare設定
# ================================

CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id
DOMAIN_NAME=your-domain.com
FRONTEND_DOMAIN=https://your-domain.com

# ================================
# Supabase管理設定
# ================================

# Supabase管理用（マイグレーション・管理操作用）
SUPABASE_ACCESS_TOKEN=sbp_your-supabase-access-token

# ================================
# API Gateway設定（Terraform適用後）
# ================================

# API Gateway ベースURL（terraform output api_gateway_url で取得）
API_GATEWAY_BASE_URL=https://api-id.execute-api.ap-northeast-1.amazonaws.com

# ================================
# 注意事項
# ================================
#
# 1. 本番環境では GitHub Environment Secrets を使用
# 2. .env ファイルは .gitignore に含める
# 3. API_GATEWAY_BASE_URL は terraform apply 後に terraform output で取得
